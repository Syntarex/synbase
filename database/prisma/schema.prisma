generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model Profile {
    id  String @id @default(uuid())
    sub String @unique
}

model BlogPost {
    id          String   @id @default(uuid())
    title       String
    description String
    content     String
    slug        String   @unique
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
