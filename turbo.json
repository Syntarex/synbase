{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "pipeline": {
        "clean": {},
        "build": {
            "dependsOn": ["clean", "lint", "^build"]
        },
        "dev": {
            "cache": false,
            "dependsOn": ["@synbase/database#dev:startdb", "@synbase/database#wait-for-database", "^dev"]
        },
        "dev:resetdb": {},
        "dev:startdb": {},
        "lint": {},
        "start": {
            "dependsOn": ["@synbase/database#wait-for-database", "^start"]
        },
        "wait-for-database": {}
    }
}
