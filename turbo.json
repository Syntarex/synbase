{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "pipeline": {
        "clean": {},
        "build": {
            "dependsOn": ["clean", "lint", "^build"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["@synbase/database:build"]
